<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NewUser">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vista"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">

        </ImageView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paynextlogo"
            android:layout_marginLeft="@dimen/_120sdp"
            android:layout_marginTop="8dp">

        </ImageView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_140sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:textAllCaps="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/bg3"
                android:hint="@string/edittext_hintmobile"
                android:gravity="center_horizontal"
                android:textColorHint="@color/indigo_900"
                android:padding="15dp"
                android:textSize="15dp">

            </EditText>




            <EditText
                android:id="@+id/enterpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/bg3"
                android:hint="@string/edittext_enterpassword"
                android:gravity="center_horizontal"
                android:textColorHint="@color/indigo_900"
                android:padding="15dp"
                android:inputType="textPassword"
                android:textSize="15dp">

            </EditText>
            <EditText
                android:id="@+id/reenterpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/bg3"
                android:hint="@string/edittext_reenterpassword"
                android:gravity="center_horizontal"
                android:textColorHint="@color/indigo_900"
                android:padding="15dp"
                android:inputType="textPassword"
                android:textSize="15dp">

            </EditText>

            <Button
                android:id="@+id/registerbutton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/button"
                android:text="REGISTER"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:paddingTop="@dimen/_5sdp"
                android:textSize="15dp">

            </Button>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_350sdp"
        android:background="@drawable/backgroungimage"

        ></ImageView>

</RelativeLayout>